#!/bin/bash

# Usage
#   gen-grubcfg [SYSROOT] [EXTRA_KARGS] [EXTRA_MARGS]

# This script generates a grub.cfg file for the given sysroot.

case "$1" in
    -h|--help)
        echo "Usage: gen-grubcfg [SYSROOT] [EXTRA_KARGS] [EXTRA_MARGS]"
        echo "  SYSROOT: The sysroot to generate grub.cfg for."
        echo "  EXTRA_KARGS: Extra kernel arguments to pass to the kernel."
        echo "  EXTRA_MARGS: Extra arguments to pass to the modules."
        exit 0
        ;;
esac

if [ -z "$1" ]; then
    echo "No sysroot specified."
    exit 1
else
    SYSROOT="$1"
fi

if [ -z "$2" ]; then
    EXTRA_KARGS=""
else
    EXTRA_KARGS="$2"
fi

if [ -z "$3" ]; then
    EXTRA_MARGS=""
else
    EXTRA_MARGS="$3"
fi


header() {
    echo -e "default 0"
    echo -e "timeout 5"
    echo -e ""
}

entry() {

    # Usage entry [ENTRY] [KARGS] [MARGS]
    echo -e "menuentry \"$1\" {"
    echo -e "   multiboot2 /boot/aplus $2"
    
    if [ -e $SYSROOT/boot/initrd.iso ]; then
        echo -e "   module2 /boot/initrd.iso type=ramdisk"
    fi
    
    if [ -e $SYSROOT/usr/lib/modules/exports ]; then
        echo -e "   module2 /usr/lib/modules/exports type=exports"
    fi

    pushd $SYSROOT &> /dev/null

        for ko in $(find usr/lib/modules -type f -iname "*.ko"); do
            test -f "$ko" || continue
            echo -e "   module2 /$ko type=module $3"
        done

    popd &> /dev/null

    echo -e "   boot"
    echo -e "}"
    echo -e ""

}


header                                                                                                     >  $SYSROOT/boot/grub/grub.cfg
entry "aplus"                  "root=/dev/sda1 rootfs=ext2 $EXTRA_KARGS"                    "$EXTRA_MARGS" >> $SYSROOT/boot/grub/grub.cfg
entry "aplus-nographics"       "root=/dev/sda1 rootfs=ext2 graphics=no $EXTRA_KARGS"        "$EXTRA_MARGS" >> $SYSROOT/boot/grub/grub.cfg
entry "aplus-builtin-graphics" "root=/dev/sda1 rootfs=ext2 graphics=builtin $EXTRA_KARGS"   "$EXTRA_MARGS" >> $SYSROOT/boot/grub/grub.cfg
entry "aplus-live"             "root=/dev/ram0 rootfs=iso9660 $EXTRA_KARGS"                 "$EXTRA_MARGS" >> $SYSROOT/boot/grub/grub.cfg
