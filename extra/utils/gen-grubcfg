#!/bin/bash

# Usage
#   gen-grubcfg [SYSROOT] [EXTRA_KARGS] [EXTRA_MARGS]

sysroot=$1
extra_kargs=$2
extra_margs=$3
core="/boot/aplus"


header() {
    echo -e "default 0"
    echo -e "timeout 5"
    echo -e ""
}

entry() {

    # Usage entry [ENTRY] [KARGS] [MARGS]
    echo -e "menuentry \"$1\" {"
    echo -e "   multiboot2 $core $2"
    
    if [ -e $sysroot/usr/lib/modules/exports ]; then
        echo -e "   module2 /usr/lib/modules/exports"
    fi

    pushd $sysroot &> /dev/null

        for ko in $(find usr/lib/modules -type f -iname "*.ko"); do
            test -f "$ko" || continue
            echo -e "   module2 /$ko $3"
        done

    popd &> /dev/null

    echo -e "   boot"
    echo -e "}"
    echo -e ""

}


header                                                                                                     >  $sysroot/boot/grub/grub.cfg
entry "aplus"                  "root=/dev/sda1 rootfs=ext2 $extra_kargs"                    "$extra_margs" >> $sysroot/boot/grub/grub.cfg
entry "aplus-nographics"       "root=/dev/sda1 rootfs=ext2 graphics=no $extra_kargs"        "$extra_margs" >> $sysroot/boot/grub/grub.cfg
entry "aplus-builtin-graphics" "root=/dev/sda1 rootfs=ext2 graphics=builtin $extra_kargs"   "$extra_margs" >> $sysroot/boot/grub/grub.cfg
